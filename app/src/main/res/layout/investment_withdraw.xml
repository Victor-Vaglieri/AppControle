<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_lightest"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/topBar"
        layout="@layout/component_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retirar Investimento"
                android:textColor="@color/neutral_dark_darkest"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/neutral_light_lightest"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_outline"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ativo"
                        android:textColor="@color/neutral_dark_medium"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvInvestName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/neutral_dark_darkest"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="BitCoin (BC)" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Valor Base Investido:"
                            android:textColor="@color/neutral_dark_medium"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvBaseValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/neutral_dark_darkest"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="R$ 1.500,00" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/highlight_lightest"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor total estimado disponível:"
                        android:textColor="@color/neutral_dark_medium"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEstimatedTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/neutral_dark_darkest"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="R$ 1.920,00" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="@color/neutral_light_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:text="Valor a Retirar:"
                            android:textColor="@color/neutral_dark_medium"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnWithdrawMinus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="8dp"
                            android:src="@drawable/icon_minus"
                            app:tint="@color/highlight_darkest" />

                        <EditText
                            android:id="@+id/etWithdrawValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:background="@null"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:textColor="@color/neutral_dark_darkest"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            tools:text="1920.00"/>

                        <ImageView
                            android:id="@+id/btnWithdrawPlus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="8dp"
                            android:src="@drawable/icon_plus"
                            app:tint="@color/highlight_darkest" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Destino do resgate (Conta/Cartão)"
                android:textColor="@color/neutral_dark_darkest"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spinnerDestination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_outline"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Selecione..."
                android:textColor="@color/neutral_dark_darkest"
                app:drawableEndCompat="@drawable/icon_down"
                app:drawableTint="@color/neutral_dark_lightest" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input_outline"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_spinner_option"
                tools:itemCount="3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_outlined"
                    android:text="Cancelar"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConfirmWithdraw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_primary"
                    android:text="Retirar"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_light_lightest"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>