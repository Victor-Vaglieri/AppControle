<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/neutral_light_lightest">

    <include
        android:id="@+id/topBar"
        layout="@layout/component_top_bar"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:id="@+id/containerFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollChips">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <View
                    android:id="@+id/dividerVertical"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@color/neutral_light_dark"
                    app:layout_constraintBottom_toBottomOf="@+id/valInvestido"
                    app:layout_constraintEnd_toEndOf="@+id/guidelineCenter"
                    app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
                    app:layout_constraintTop_toTopOf="@+id/labelInvestido" />

                <TextView
                    android:id="@+id/labelInvestido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:text="Investido"
                    android:textColor="@color/neutral_light_dark"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/dividerVertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/valInvestido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/neutral_light_darkest"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/dividerVertical"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/labelInvestido"
                    app:layout_constraintTop_toBottomOf="@+id/labelInvestido"
                    tools:text="R$ 3.000,00" />

                <TextView
                    android:id="@+id/labelSaldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="end"
                    android:text="Saldo total"
                    android:textColor="@color/neutral_dark_lightest"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dividerVertical"
                    app:layout_constraintTop_toTopOf="@+id/labelInvestido" />

                <TextView
                    android:id="@+id/valSaldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="end"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/valInvestido"
                    app:layout_constraintEnd_toEndOf="@+id/labelSaldo"
                    app:layout_constraintStart_toEndOf="@+id/dividerVertical"
                    app:layout_constraintTop_toTopOf="@+id/valInvestido"
                    tools:text="R$ 4.250,00" />

                <TextView
                    android:id="@+id/labelLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Limite de crédito"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/valInvestido" />

                <ProgressBar
                    android:id="@+id/progressBarLimit"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar_custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelLimit" />

                <TextView
                    android:id="@+id/txtLimitPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/neutral_dark_medium"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/progressBarLimit"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="50%" />

                <TextView
                    android:id="@+id/txtLimitValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:textColor="@color/neutral_dark_medium"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBarLimit"
                    tools:text="2.250,00 / 5.500,00" />

                <LinearLayout
                    android:id="@+id/containerBestCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    app:layout_constraintTop_toBottomOf="@+id/txtLimitValues"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cartão do dia: "
                        android:textColor="@color/neutral_dark_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvBestCardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Nubank Platinum"
                        android:textColor="@color/highlight_darkest"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBestCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="@color/highlight_lightest"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/highlight_dark"
                    app:strokeWidth="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtLimitValues"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/titleOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Opções"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/containerBestCard" />

                <LinearLayout
                    android:id="@+id/containerOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleOptions">

                    <com.example.controledovitao.ui.components.OptionItemView
                        android:id="@+id/optAddExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cvIcon="@drawable/icon_add_spent"
                        app:cvTitle="Adicionar gasto" />

                    <com.example.controledovitao.ui.components.OptionItemView
                        android:id="@+id/optSimulator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cvIcon="@drawable/icon_simulator"
                        app:cvTitle="Simulador Invest" />

                    <com.example.controledovitao.ui.components.OptionItemView
                        android:id="@+id/optInvestments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cvIcon="@drawable/icon_invests"
                        app:cvTitle="Investimentos" />

                    <com.example.controledovitao.ui.components.OptionItemView
                        android:id="@+id/optPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cvIcon="@drawable/icon_payment"
                        app:cvTitle="Meios de pagamento" />

                    <com.example.controledovitao.ui.components.OptionItemView
                        android:id="@+id/optReports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cvIcon="@drawable/icon_reports"
                        app:cvTitle="Acessar relatórios" />
                </LinearLayout>

                <TextView
                    android:id="@+id/titleRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Últimos gastos (TODOS)"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/containerOptions" />

                <LinearLayout
                    android:id="@+id/containerRecentExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="24dp"
                    android:divider="@drawable/divider_vertical_12dp"
                    android:showDividers="middle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleRecent">

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/containerCardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="32dp"
                android:paddingHorizontal="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/neutral_light_light"
                    app:cardElevation="4dp">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chartExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_dark_darkest"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_outline"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Limite Disponível"
                            android:textColor="@color/neutral_dark_darkest"/>
                        <ImageView
                            android:id="@+id/btnLimitMinus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_minus"
                            android:padding="8dp"/>
                        <TextView
                            android:id="@+id/tvCardLimit"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="R$ 0,00"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btnLimitPlus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_plus"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saldo em Conta"
                            android:textColor="@color/neutral_dark_darkest"/>
                        <ImageView
                            android:id="@+id/btnBalanceMinus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_minus"
                            android:padding="8dp"/>
                        <TextView
                            android:id="@+id/tvCardBalance"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="R$ 0,00"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btnBalancePlus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_plus"
                            android:padding="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastos neste cartão"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_dark_darkest"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCardSpents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_expense_row"
                    tools:itemCount="3"/>

                <Button
                    android:id="@+id/btnCloseInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/bg_button_primary"
                    app:backgroundTint="@null"
                    android:text="Fechar Fatura Atual"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_light_lightest"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/cardContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>