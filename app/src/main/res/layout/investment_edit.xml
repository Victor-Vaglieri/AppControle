<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_lightest"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/topBar"
        layout="@layout/component_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Investimento"
                android:textColor="@color/neutral_dark_darkest"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/neutral_light_lightest"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_outline"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cripto moeda / Ativo"
                        android:textColor="@color/neutral_dark_medium"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/spinnerInvestment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_outline"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="BitCoin (BC)"
                        android:textColor="@color/neutral_dark_darkest"
                        app:drawableEndCompat="@drawable/icon_down"
                        app:drawableTint="@color/neutral_dark_lightest" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Valor"
                            android:textColor="@color/neutral_dark_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnValMinus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_minus"
                                app:tint="@color/highlight_darkest" />

                            <EditText
                                android:id="@+id/etInvestValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="16dp"
                                android:background="@null"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:text="1.500,00"
                                android:textColor="@color/neutral_dark_darkest"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/btnValPlus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_plus"
                                app:tint="@color/highlight_darkest" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Período"
                        android:textColor="@color/neutral_dark_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_outline"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnYearMinus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_minus"
                                app:tint="@color/highlight_darkest" />

                            <TextView
                                android:id="@+id/txtYears"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:text="1 Ano"
                                android:textSize="18sp"
                                android:textColor="@color/neutral_dark_darkest" />

                            <ImageView
                                android:id="@+id/btnYearPlus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_plus"
                                app:tint="@color/highlight_darkest" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_outline"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnMonthMinus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_minus"
                                app:tint="@color/highlight_darkest" />

                            <TextView
                                android:id="@+id/txtMonths"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="4dp"
                                android:text="0 meses"
                                android:textSize="18sp"
                                android:textColor="@color/neutral_dark_darkest" />

                            <ImageView
                                android:id="@+id/btnMonthPlus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_circle_button"
                                android:padding="8dp"
                                android:src="@drawable/icon_plus"
                                app:tint="@color/highlight_darkest" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLabelYield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rendimento médio anual"
                                android:textSize="16sp"
                                android:textColor="@color/neutral_dark_darkest" />

                            <TextView
                                android:id="@+id/tvRateValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="128% a.a."
                                android:textColor="@color/neutral_dark_light"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnInfo"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/icon_info"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/highlight_lightest"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="Valor investido:"
                            android:textColor="@color/neutral_dark_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resInvested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 1.500,00"
                            android:textSize="18sp"
                            android:textColor="@color/neutral_dark_darkest"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="Rendimento:"
                            android:textColor="@color/neutral_dark_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resYield"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ R$ 420,00"
                            android:textSize="18sp"
                            android:textColor="@color/neutral_dark_darkest"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/neutral_light_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="22sp"
                            android:text="Valor final:"
                            android:textColor="@color/neutral_dark_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 1.920,00"
                            android:textColor="@color/neutral_dark_darkest"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_outlined"
                    android:text="Voltar"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_primary"
                    android:text="Editar"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_light_lightest"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>