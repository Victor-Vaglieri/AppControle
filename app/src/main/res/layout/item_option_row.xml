<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_surface"
    android:padding="16dp"
    android:layout_marginBottom="12dp"> <ImageView
    android:id="@+id/iconOption"
    android:layout_width="24dp"
    android:layout_height="24dp"
    tools:src="@drawable/ic_menu_gallery"
    app:tint="@color/highlight_darkest"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Nome da Opção"
        android:textColor="@color/neutral_dark_darkest"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconChevron"
        app:layout_constraintStart_toEndOf="@+id/iconOption"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconChevron"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_chevron_right"
        app:tint="@color/neutral_dark_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>