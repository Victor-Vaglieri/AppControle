<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_lightest"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/topBar"
        layout="@layout/component_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/neutral_light_lightest"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/neutral_dark_dark"/>

                    <TextView
                        android:id="@+id/tvDetailItem"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_outline"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="Gasto X"
                        android:textColor="@color/neutral_dark_darkest"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Método"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/neutral_dark_dark"/>

                    <TextView
                        android:id="@+id/tvDetailMethod"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_outline"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="Visa Crédito"
                        android:textColor="@color/neutral_dark_darkest"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valor"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/neutral_dark_dark"/>

                            <TextView
                                android:textSize="16sp"
                                android:id="@+id/tvDetailValue"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_input_outline"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="16dp"
                                android:text="576,69"
                                android:textColor="@color/neutral_dark_darkest"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vezes"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/neutral_dark_dark"/>

                            <TextView
                                android:textSize="20sp"
                                android:id="@+id/tvDetailTimes"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_input_outline"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/neutral_dark_darkest"/>
                        </LinearLayout>
                    </LinearLayout>

                    <CalendarView
                        android:id="@+id/calendarDetail"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_input_outline"
                        android:dateTextAppearance="@style/CalendarTextOverride"
                        android:weekDayTextAppearance="@style/CalendarTextOverride" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_button_outline"
                android:text="Voltar"
                android:textColor="@color/highlight_darkest"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>