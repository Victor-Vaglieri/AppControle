<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_lightest"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/topBar"
        layout="@layout/component_top_bar"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_transparent"
                android:padding="24dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/lblItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/inputItem"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:hint="Ex: Placa de vídeo"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textColorHint="@color/neutral_dark_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblItem" />

                <TextView
                    android:id="@+id/lblMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Método"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputItem" />

                <TextView
                    android:id="@+id/inputMethod"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Selecione..."
                    android:textColor="@color/neutral_dark_darkest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblMethod" />

                <ImageView
                    android:id="@+id/iconArrowMethod"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_down"
                    app:tint="@color/neutral_dark_light"
                    app:layout_constraintBottom_toBottomOf="@+id/inputMethod"
                    app:layout_constraintEnd_toEndOf="@+id/inputMethod"
                    app:layout_constraintTop_toTopOf="@+id/inputMethod" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMethods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input"
                    android:visibility="gone"
                    android:elevation="4dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/inputMethod"
                    app:layout_constraintStart_toStartOf="@+id/inputMethod"
                    app:layout_constraintEnd_toEndOf="@+id/inputMethod"
                    tools:listitem="@layout/item_spinner_option"
                    tools:itemCount="3"/>

                <TextView
                    android:id="@+id/lblValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Valor"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerMethods"
                    app:layout_constraintBottom_toBottomOf="@+id/inputValue" />
                <ImageView
                    android:id="@+id/btnValuePlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle_button"
                    android:padding="8dp"
                    android:src="@drawable/icon_plus"
                    app:tint="@color/highlight_darkest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/lblValue"
                    app:layout_constraintBottom_toBottomOf="@+id/lblValue"/>

                <EditText
                    android:id="@+id/inputValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="0,00"
                    android:inputType="numberDecimal"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/btnValuePlus"
                    app:layout_constraintBottom_toBottomOf="@+id/btnValuePlus"
                    app:layout_constraintTop_toTopOf="@+id/btnValuePlus" />

                <ImageView
                    android:id="@+id/btnValueMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_circle_button"
                    android:padding="8dp"
                    android:src="@drawable/icon_minus"
                    app:tint="@color/highlight_darkest"
                    app:layout_constraintEnd_toStartOf="@+id/inputValue"
                    app:layout_constraintTop_toTopOf="@+id/btnValuePlus"
                    app:layout_constraintBottom_toBottomOf="@+id/btnValuePlus"/>

                <TextView
                    android:id="@+id/lblTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Vezes"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblValue"
                    app:layout_constraintBottom_toBottomOf="@+id/inputTimes"/>

                <ImageView
                    android:id="@+id/btnTimesPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_circle_button"
                    android:padding="8dp"
                    android:src="@drawable/icon_plus"
                    app:tint="@color/highlight_darkest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/lblTimes"
                    app:layout_constraintBottom_toBottomOf="@+id/lblTimes"/>

                <EditText
                    android:id="@+id/inputTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/btnTimesPlus"
                    app:layout_constraintBottom_toBottomOf="@+id/btnTimesPlus"
                    app:layout_constraintTop_toTopOf="@+id/btnTimesPlus" />

                <ImageView
                    android:id="@+id/btnTimesMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_circle_button"
                    android:padding="8dp"
                    android:src="@drawable/icon_minus"
                    app:tint="@color/highlight_darkest"
                    app:layout_constraintEnd_toStartOf="@+id/inputTimes"
                    app:layout_constraintTop_toTopOf="@+id/btnTimesPlus"
                    app:layout_constraintBottom_toBottomOf="@+id/btnTimesPlus" />

                <TextView
                    android:id="@+id/lblDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Data da compra"
                    android:textColor="@color/neutral_dark_darkest"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblTimes" />

                <TextView
                    android:id="@+id/inputDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Hoje"
                    android:textColor="@color/neutral_dark_darkest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lblDate" />

                <ImageView
                    android:id="@+id/iconCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_calendar"
                    app:tint="@color/neutral_dark_light"
                    app:layout_constraintBottom_toBottomOf="@+id/inputDate"
                    app:layout_constraintEnd_toEndOf="@+id/inputDate"
                    app:layout_constraintTop_toTopOf="@+id/inputDate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_button_primary"
                app:backgroundTint="@null"
                android:text="Adicionar"
                android:textAllCaps="false"
                android:textColor="@color/neutral_light_lightest"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cardContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>